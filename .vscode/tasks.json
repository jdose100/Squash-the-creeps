{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: Rust (linux)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--manifest-path",
                "${workspaceFolder}/rust/Cargo.toml"
            ]
        },
        {
            "label": "Build: Rust (windows)",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--manifest-path",
                "${workspaceFolder}/rust/Cargo.toml",
                "--target",
                "x86_64-pc-windows-gnu"
            ]
        },
        {
            "label": "Export: debug (linux)",
            "type": "shell",
            "command": "godot-4",
            "args": [
                "--headless",
                "--path",
                "godot",
                "--export-debug",
                "\"Linux\"",
                "build/linux/Deeps-Creeps"
            ],
            "dependsOn": "Build: Rust (linux)"
        }
    ]
}
